<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PrincipalActivity"
    android:orientation="vertical"
    android:background="#FDF7FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/btProduto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="Produto"
            android:textColor="#F48707"
            android:textSize="35dp"
            android:textAlignment="viewStart"
            android:paddingLeft="50dp"
            android:paddingTop="100dp"
            android:background="@drawable/botaoprincipalproduto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btPedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/botaoprincipalbotaopedido"
            android:text="Pedido"
            android:textColor="#FDF7FB"
            android:textSize="35dp"
            android:textAlignment="viewEnd"
            android:paddingRight="60dp"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</LinearLayout>